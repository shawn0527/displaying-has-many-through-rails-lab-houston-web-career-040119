<h1><%= @doctor.name %></h1>
<br>
<h2>Department: <%= @doctor.department %></h2>
<br>
<% @doctor.appointments.each do |appointment| %>
<li><%=appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")%> appointment with patient <%=link_to appointment.patient.name, appointment.patient %></li>
<% end %>